<% layout('layouts/boilerplate') %>
<div class="ad__form">
    <form class="form" action="/ads/<%=ad._id%>?_method=PUT" method="POST">
        <div class="form__group">
            <label class="form__label" for="title">Tytuł ogłoszenia</label>
            <input class="form__input" type="text" id="title" name="ad[title]" value="<%=ad.title%>">
        </div>
        <div class="form__group">
            <label class="form__label" for="price">Cena</label>
            <input class="form__input" type="text" id="price" name="ad[price]" value="<%=ad.price%>">
        </div>
        <div class="form__group">
            <label class="form__label" for="description">Opis</label>
            <input class="form__input" type="text" id="description" name="ad[description]" value="<%=ad.description%>">
        </div>
        <button>Edytuj ogłoszenie</button>
    </form>
    <a href="/ads/<%=ad._id%>">Powrót do ogłoszenia</a>
</div>