<% layout('layouts/boilerplate') %>
<div class="new-ad">
    <h1 class="heading-1 u-margin-bottom u-center-text">Edytuj ogłoszenie</h1>
    <form class="new-ad__form" action="/ads/<%=ad._id%>?_method=PUT" method="POST">
        <div class="new-ad__group">
            <label class="new-ad__label" for="title">Tytuł ogłoszenia</label>
            <input class="new-ad__input" type="text" id="title" name="ad[title]" value="<%=ad.title%>">
        </div>
        <div class="new-ad__group">
            <label class="new-ad__label" for="price">Cena</label>
            <input class="new-ad__input" type="text" id="price" name="ad[price]" value="<%=ad.price%>">
        </div>
        <div class="new-ad__group u-margin-bottom-big">
            <label class="new-ad__label" for="description">Opis</label>
            <textarea class="new-ad__input"  id="description" name="ad[description]" rows="5"><%=ad.description%></textarea>
        </div>
        <button class="btn">Edytuj</button>
    </form>
</div>