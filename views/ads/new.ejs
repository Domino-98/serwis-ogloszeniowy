<% layout('layouts/boilerplate') %>
<div class="ad__form">
    <form class="form" action="/ads" method="POST">
        <div class="form__group">
            <label class="form__label" for="title">Tytuł ogłoszenia</label>
            <input class="form__input" type="text" id="title" name="ad[title]">
        </div>
        <div class="form__group">
            <label class="form__label" for="price">Cena</label>
            <input class="form__input" type="text" id="price" name="ad[price]">
        </div>
        <div class="form__group">
            <label class="form__label" for="description">Opis</label>
            <input class="form__input" type="text" id="description" name="ad[description]">
        </div>
        <button>Dodaj ogłoszenie</button>
    </form>
    <a href="/ads">Wszystkie ogłoszenia</a>
</div>